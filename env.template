PORT=3000
NODE_ENV=development

# Supabase PostgreSQL Connection (Option 1: Connection String - Recommended)
# IMPORTANT: Use Connection Pooler for IPv4 compatibility!
# Get this from Supabase Dashboard > Settings > Database > Connection string > Connection pooling > Session mode > URI
# Pooler URL format (port 6543 - IPv4 compatible):
DATABASE_URL=postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
# OR Direct connection (port 5432 - requires IPv6 or IPv4 add-on):
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Alternative: Individual Connection Parameters (Option 2)
# If not using DATABASE_URL, use these individual parameters
DB_HOST=db.[YOUR-PROJECT-REF].supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=[YOUR-PASSWORD]
DB_SSL=true

# CORS Configuration
CORS_ORIGIN=*

# Socket.io Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Application Configuration
APP_NAME=Support ChatBot
APP_VERSION=1.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Chat Shared Secret (for /api/chat/start endpoint)
CHAT_SHARED_SECRET=default-secret-change-in-production

# Guest Chat Mode (allow unauthenticated users to start chats)
# Set to 'true' to allow guest mode, 'false' to require authentication
ALLOW_GUEST_CHAT=true

# Email Configuration (Nodemailer SMTP)
# Enable/disable email sending
EMAIL_ENABLED=true

# Test Mode - when true, emails are logged to console instead of being sent
TEST_MODE=false

# Enable/disable logging (email content, errors, etc.)
LOGGING_ENABLED=true

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Support Email Address (where tickets are sent)
SUPPORT_EMAIL=support@example.com

# Email From Address
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Support ChatBot
